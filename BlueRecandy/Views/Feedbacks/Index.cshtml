@using Microsoft.AspNetCore.Mvc.Localization
@model IEnumerable<BlueRecandy.Models.Feedback>
@inject IViewLocalizer T

@{
    ViewData["Title"] = "Index";
}

<h1>@T["Index"]</h1>

<p>
    <a asp-action="Create">@T["Create New"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @T["FeedbackContent"]
            </th>
            <th>
                @T["Rating"]
            </th>
            <th>
                @T["Name"]
            </th>
            <th>
                @T["User"]
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FeedbackContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">@T["Edit"]</a> |
                <a asp-action="Details" asp-route-id="@item.Id">@T["Details"]</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">@T["Delete"]</a>
            </td>
        </tr>
}
    </tbody>
</table>
