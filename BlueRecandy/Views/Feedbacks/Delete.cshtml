@using Microsoft.AspNetCore.Mvc.Localization
@model BlueRecandy.Models.Feedback
@inject IViewLocalizer T 
@{
    ViewData["Title"] = "Delete";
}

<h1>@T["Delete"]</h1>

<h3>@T["Are you sure you want to delete this?"]</h3>
<div>
    <h4>@T["Feedback"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @T["FeedbackContent"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FeedbackContent)
        </dd>
        <dt class = "col-sm-2">
            @T["Rating"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
        <dt class = "col-sm-2">
            @T["Product"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.DownloadURL)
        </dd>
        <dt class = "col-sm-2">
            @T["User"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value=@T["Delete"] class="btn btn-danger" /> |
        <a asp-action="Index">@T["Back to List"]</a>
    </form>
</div>
