@using Microsoft.AspNetCore.Mvc.Localization
@model BlueRecandy.Models.Feedback
@inject IViewLocalizer T

@{
    ViewData["Title"] = "Details";
}

<h1>@T["Details"]</h1>

<div>
    <h4>@T["Feedback"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @T["FeedbackContent"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FeedbackContent)
        </dd>
        <dt class = "col-sm-2">
            @T["Rating"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
        <dt class = "col-sm-2">
            @T["Product"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.DownloadURL)
        </dd>
        <dt class = "col-sm-2">
            @T["User"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Id)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">@T["Edit"]</a> |
    <a asp-action="Index">@T["Back to List"]</a>
</div>
