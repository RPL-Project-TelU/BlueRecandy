@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.Localization
@model BlueRecandy.Models.Product
@inject IViewLocalizer T
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Create";
}

<h5>@T["Sell Product"]</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-4 mb-4">
                <label asp-for="Name" class="control-label">@T["Name"]</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-4 mb-4">
                <label asp-for="DownloadURL" class="control-label">@T["Download URL"]</label>
                <input asp-for="DownloadURL" class="form-control" />
                <span asp-validation-for="DownloadURL" class="text-danger"></span>
            </div>
            <div class="form-group mt-4 mb-4">
                <label asp-for="Price" class="control-label">@T["Price"]</label>
                <input asp-for="Price" type="number" class="form-control" value="0" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mt-4 mb-4">
                <label asp-for="Description" class="control-label">@T["Description"]</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-4 mb-4">
                <input type="submit" value=@T["Create"] class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@T["Back to List"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
