@using Microsoft.AspNetCore.Identity
@model BlueRecandy.Models.Product

@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Create";
}

<h5>Sell Product</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-4 mb-4">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UseExternalURL" class="control-label"></label>
                <br/>
                
                @Html.RadioButtonFor(model => model.UseExternalURL, true)
                Use External Link
                
                @Html.RadioButtonFor(model => model.UseExternalURL, false)
                Source File
            </div>

            <div class="form-group mt-4 mb-4">
                <label asp-for="DownloadURL" class="control-label"></label>
                <input asp-for="DownloadURL" class="form-control" />
                <span asp-validation-for="DownloadURL" class="text-danger"></span>
            </div>
            <div class="form-group mt-4 mb-4">
                <label for="sourceFile" class="control-label"></label>
                <input name="sourceFile" type="file" class="form-control" />
            </div>

            <div class="form-group mt-4 mb-4">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" type="number" class="form-control" value="0" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mt-4 mb-4">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-4 mb-4">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
