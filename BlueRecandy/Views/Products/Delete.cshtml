@using Microsoft.AspNetCore.Mvc.Localization
@model BlueRecandy.Models.Product
@inject IViewLocalizer T 
@{
    ViewData["Title"] = "Delete";
}

<h1>@T["Delete"]</h1>

<h3>@T["Are you sure you want to delete this?"]</h3>
<div>
    <h4>@T["Product"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @T["Name"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @T["Description"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @T["Download URL"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DownloadURL)
        </dd>
        <dt class = "col-sm-2">
            @T["Owner"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Owner.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value=@T["Delete"] class="btn btn-danger" /> |
        <a asp-action="Index">@T["Back to List"]</a>
    </form>
</div>
